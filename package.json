    "express-joi-validation": "^5.0.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "lodash": "^4.17.15",
    "mongoose": "^7.4.0",
    "morgan": "^1.10.0",
    "node-getopt": "^0.3.2",
