    "@types/morgan": "^1.9.4",
    "@types/node-getopt": "^0.2.31",
    "@types/npm": "^2.0.31",
    "@types/sqlite3": "^3.1.6",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "esbuild": "^0.18.14",
